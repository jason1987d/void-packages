# Template file for 'yacy'
pkgname=yacy
version=1.940.202411251211.51c612f84
revision=1
depends="openjdk21-jre bash"
short_desc="Distributed Peer-to-Peer Web Search Engine and Intranet Search Appliance"
maintainer="Jason Elswick <jason@jasondavid.tv>"
license="GPL-2.0-or-later"
homepage="https://yacy.net/"
distfiles="https://release.yacy.net/yacy_v1.940_202411251211_51c612f84.tar.gz"
