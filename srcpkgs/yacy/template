system_accounts="_yacy"
yacy_homedir="/var/lib/yacy"
yacy_shell="/bin/bash"
make_dirs="/var/lib/yacy 0755 _yacy _yacy"

do_install() {
	vmkdir var/lib/yacy
	vcopy ${wrksrc}/* var/lib/yacy
}

post_install() {
	vsv yacy
}

