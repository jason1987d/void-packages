# Template file for 'ta-lib'
pkgname=ta-lib
version=0.6.4
revision=1
build_style=cmake
short_desc="TA-Lib (Core C Library) (technical analysis)"
maintainer="Jason Elswick <jason@jasondavid.us>"
license="BSD-3-Clause"
homepage="https://github.com/TA-Lib/ta-lib"
distfiles="https://github.com/TA-Lib/ta-lib/archive/refs/tags/v${version}.tar.gz"
checksum=a2fac51f4f1d4804dd2edd1701d52bb9728a5c2ec936d0c5d9a222c49f57d77b

post_install() {
	vlicense LICENSE
}

ta-lib-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
		vmove usr/share
	}
}
